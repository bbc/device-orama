<%= form_for(@model) do |f| %>
  <% if @model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@model.errors.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
      <% @model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>

  <div class="field form-group row">
    <%= f.label :brand_id, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
    <%= f.collection_select(:brand_id, Brand.all, :id, :name, {},{ class: "form-control", :disabled => "disabled" }) %>
    </div>
  </div>
  
  <div class="field form-group row">
    <%= f.label :device_type_id, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
    <%= f.collection_select(:device_type_id, DeviceType.all, :id, :classification, {}, { class: "form-control", :disabled => "disabled" }) -%>
    </div>
  </div>
  
  <div class="field form-group row">
    <%= f.label( :name, class: 'col-sm-2 form-control-label') %>
    <div class="col-sm-10">
    <%= f.text_field( :name, class: 'form-control', disabled: true ) %>
    </div>
  </div>
  
  <div class="field form-group row">
    <%= f.label :display_name, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
    <%= f.text_field :display_name, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group row">
    <%= f.label :image_URL, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
    <%= f.text_field :img_url, class: 'form-control' %>
    </div>
  </div> 

  <div class="field form-group row">
    <%= f.label :description, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
    <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div> 
  
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>
