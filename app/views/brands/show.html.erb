<p id="notice"><%= notice %></p>

<div class="row">
  <% if @device_type %>
  <%= render("shared/device_type_card", device_type: @device_type, size: :condensed ) -%>
  <% end %>
  <%= render("shared/brand_card", brand: @brand, size: :condensed ) -%>
</div>


<div class="row">
  <% @brand.models.each do |model| %>
    <%= render("shared/model_card", model: model, size: :full ) -%>
  <% end %>
</div>

<br />
<hr />

<% if @devices %>
<div class="row">
  <% @devices.each do |device| %>
    <%= render("shared/device_card", device: device, size: :full ) -%>  
  <% end %>
</div>
<% end %>


