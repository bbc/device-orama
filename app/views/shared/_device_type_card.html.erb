<div class="card card-device-type card-<%=device_type.classification.downcase-%> panel panel-default col-lg-3 col-md-4 col-sm-6 col-xs-12"
     href="<%= card_link -%>" >
  <div class="panel-body">
    <h1><%= device_type.classification -%></h1>
    <% if size != :condensed %>
      <br />
      <p><%= device_type.description -%></p>
      <div class="btn-group btn-group-small">
        <button class="btn btn-sm btn-default"><%= link_to 'Show', device_type_path(device_type.id) %></button>
        <button class="btn btn-sm btn-default"><%= link_to 'Edit', edit_brand_path(device_type) %></button>
      </div>
    <% end %>
  </div>
</div>

